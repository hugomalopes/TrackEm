<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/promotion_screen"
        android:layout_marginTop="376dp" />

    <TextView android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginTop="75dp"
        android:text="Welcome to"
        android:textSize="18dp"
        android:gravity="center"
        android:fontFamily="Arial"
        android:textStyle="bold"/>

    <ImageView android:id="@+id/promotion_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/promotion_photo"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView android:id="@+id/promotion_owner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/promotion_intermarche"
        android:layout_marginBottom="200dp"/>

    <TextView android:id="@+id/promotion_discount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="25% Off"
        android:textSize="30dp"
        android:layout_marginTop="470dp"
        android:fontFamily="Arial"
        android:gravity="center"/>

</RelativeLayout>